{
    "name": "portphp/doctrine",
    "description": "Doctrine ORM/ODM reader and writer for Port",
    "license": "MIT",
    "homepage": "https://github.com/portphp",
    "authors": [
        {
            "name": "David de Boer",
            "email": "david@ddeboer.nl"
        },
        {
            "name": "Markus Bachmann",
            "email": "markus.bachmann@bachi.biz"
        },
        {
            "name": "Community contributors",
            "homepage": "https://github.com/portphp/doctrine/graphs/contributors"
        }
    ],
    "support": {
        "issues": "https://github.com/portphp/portphp/issues",
        "source": "https://github.com/portphp/doctrine",
        "docs": "https://portphp.readthedocs.org"
    },
    "minimum-stability": "dev",    
    "prefer-stable": true,
    "require": {
        "php": ">=5.4.0",
        "portphp/portphp": "1.0.x-dev",
        "doctrine/orm": "~2.4",
        "doctrine/mongodb": "dev-master",
        "doctrine/mongodb-odm": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "Port\\Doctrine\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^4.0",
        "ext-sqlite3": "*"
    },
    "autoload-dev": {
        "psr-4": {
            "Port\\Doctrine\\Tests\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }
}
